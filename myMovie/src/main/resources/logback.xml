<?xml version="1.0" encoding="utf-8" ?>

<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>@_@%d{MM-dd HH:mm:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>

    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>